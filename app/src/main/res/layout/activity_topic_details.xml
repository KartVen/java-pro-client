<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.topic.TopicDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topic_details_layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/header_nav_padding">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/topic_details_header_back_btn_iv"
                    android:layout_width="@dimen/header_nav_btn_size"
                    android:layout_height="@dimen/header_nav_btn_size"
                    android:layout_marginStart="@dimen/header_nav_btn_margin_horizontal"
                    android:layout_marginTop="@dimen/header_nav_btn_margin_top"
                    android:clickable="true"
                    android:contentDescription="@string/back"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/common_back_arrow_src"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/topic_details_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/topic_details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_nav_label_textSize"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/topic_details_header_back_btn_iv"
                    app:layout_constraintEnd_toStartOf="@id/topic_details_header_edit_btn_iv"
                    app:layout_constraintStart_toEndOf="@id/topic_details_header_back_btn_iv"
                    app:layout_constraintTop_toTopOf="@id/topic_details_header_back_btn_iv" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/topic_details_header_edit_btn_iv"
                    android:layout_width="@dimen/header_nav_btn_size"
                    android:layout_height="@dimen/header_nav_btn_size"
                    android:layout_marginTop="@dimen/header_nav_btn_margin_top"
                    android:layout_marginEnd="@dimen/header_nav_btn_margin_horizontal"
                    android:clickable="true"
                    android:contentDescription="@string/back"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/common_edit_note_src"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/header_nav_padding"
                android:paddingHorizontal="@dimen/common__space_size"
                android:paddingBottom="@dimen/common__space_size">

                <TextView
                    android:id="@+id/topic_details_tv_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/example_name"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common__text_h3"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/topic_details_tv_header_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/example_desc"
                    android:textAlignment="center"
                    android:textColor="@color/darker_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topic_details_tv_header_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/topic_details_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="@dimen/common__space_size"
            android:paddingTop="@dimen/common__space_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topic_details_layout_header"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_nav_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/white"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="8dp"
            app:fabCradleRoundedCornerRadius="16dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/background_transparent"
                app:menu="@menu/topic_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bottom_floating_button"
            style="@style/Theme.JavaProApp.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_topic"
            app:layout_anchor="@id/bottom_app_bar"
            app:srcCompat="@drawable/main_menu_add_src" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>