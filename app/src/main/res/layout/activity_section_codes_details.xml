<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SectionCodesDetailsActivity">

    <LinearLayout
        android:id="@+id/section_codes_details_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section_codes_details_constraint_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/section_codes_details_constraint_1_1"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:layout_marginStart="@dimen/back_button_margin"
                android:layout_marginTop="@dimen/back_button_margin"
                android:background="@drawable/background_oval"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/section_codes_details_image_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/back"
                    android:padding="@dimen/back_button_padding"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/section_codes_details_text_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topic_codes"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xxlarge"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/section_codes_details_constraint_1_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_constraint_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/section_codes_details_text_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_text_1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xxlarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/section_codes_details_text_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_text_2"
                android:textAlignment="center"
                android:textColor="@color/darker_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/section_codes_details_text_view_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/section_codes_details_scroll_view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="10dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/section_codes_details_linear_1">

        <LinearLayout
            android:id="@+id/section_codes_details_linear_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/section_codes_details_text_view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="2dp"
                android:text="@string/example_text_1"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:visibility="gone" />

            <WebView
                android:id="@+id/section_codes_details_web_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:backgroundTint="@color/light_gray"
                android:paddingVertical="2dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>