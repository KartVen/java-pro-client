<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingHorizontal="@dimen/padding_menu_horizontal"
        android:theme="@style/Theme.JavaProClientApp.AppBarOverlay"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/Theme.JavaProClientApp.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/main_java_logo_im"
        android:layout_width="@dimen/java_logo_size"
        android:layout_height="@dimen/java_logo_size"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/java_logo_content_description"
        android:src="@drawable/java_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_select_section_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:text="@string/select_section"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_java_logo_im" />

    <LinearLayout
        android:id="@+id/main_section_list_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_select_section_tv">

        <androidx.cardview.widget.CardView
            android:id="@+id/section_0_card"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/margin_main_section_card"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_main_section_icon"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/tests" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/section_lectures"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="@dimen/default_text_size_large"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_1_card"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/margin_main_section_card"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_main_section_icon"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/tests" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/section_laboratories"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="@dimen/default_text_size_large"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_section_list_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_section_list_0">

        <androidx.cardview.widget.CardView
            android:id="@+id/section_2_card"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/margin_main_section_card"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_main_section_icon"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/tests" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/section_tests"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="@dimen/default_text_size_large"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_3_card"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="@dimen/margin_main_section_card"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_main_section_icon"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:src="@drawable/tests" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/section_help_links"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="@dimen/default_text_size_large"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>