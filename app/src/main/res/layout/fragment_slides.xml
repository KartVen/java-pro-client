<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.topic.fragment.QuizzesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/bottom_nav_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_tv_section_margin_bottom"
            android:text="@string/slides"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/common__text_h2"
            android:textStyle="bold" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/fragment_slides_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/process_error" />

    </LinearLayout>
</FrameLayout>