<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.stats.StatsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/stats_layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/header_nav_padding">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/stats_header_back_btn_iv"
                    android:layout_width="@dimen/header_nav_btn_size"
                    android:layout_height="@dimen/header_nav_btn_size"
                    android:layout_marginStart="@dimen/header_nav_btn_margin_horizontal"
                    android:layout_marginTop="@dimen/header_nav_btn_margin_top"
                    android:clickable="true"
                    android:contentDescription="@string/back"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/common_back_arrow_src"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/stats_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_nav_label_textSize"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/stats_header_back_btn_iv"
                    app:layout_constraintEnd_toStartOf="@id/stats_header_edit_btn_iv"
                    app:layout_constraintStart_toEndOf="@id/stats_header_back_btn_iv"
                    app:layout_constraintTop_toTopOf="@id/stats_header_back_btn_iv" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/stats_header_edit_btn_iv"
                    android:layout_width="@dimen/header_nav_btn_size"
                    android:layout_height="@dimen/header_nav_btn_size"
                    android:layout_marginTop="@dimen/header_nav_btn_margin_top"
                    android:visibility="invisible"
                    android:layout_marginEnd="@dimen/header_nav_btn_margin_horizontal"
                    android:clickable="true"
                    android:contentDescription="@string/back"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/common_edit_note_src"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>