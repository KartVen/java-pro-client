<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/profile_layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/header_nav_padding">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_header_back_btn_iv"
                    android:layout_width="@dimen/header_nav_btn_size"
                    android:layout_height="@dimen/header_nav_btn_size"
                    android:layout_marginStart="@dimen/header_nav_btn_margin_horizontal"
                    android:layout_marginTop="@dimen/header_nav_btn_margin_top"
                    android:clickable="true"
                    android:contentDescription="@string/back"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/common_back_arrow_src"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_nav_label_textSize"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/profile_header_back_btn_iv"
                    app:layout_constraintEnd_toStartOf="@id/profile_header_edit_btn_iv"
                    app:layout_constraintStart_toEndOf="@id/profile_header_back_btn_iv"
                    app:layout_constraintTop_toTopOf="@id/profile_header_back_btn_iv" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_header_edit_btn_iv"
                    android:layout_width="@dimen/header_nav_btn_size"
                    android:layout_height="@dimen/header_nav_btn_size"
                    android:layout_marginTop="@dimen/header_nav_btn_margin_top"
                    android:layout_marginEnd="@dimen/header_nav_btn_margin_horizontal"
                    android:clickable="true"
                    android:contentDescription="@string/back"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/common_edit_note_src"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/common__space_size"
            android:paddingVertical="@dimen/common__space_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_layout_header">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_view_2"
                android:layout_width="@dimen/profile_avatar_size"
                android:layout_height="@dimen/profile_avatar_size"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/common__space_size"
                android:src="@drawable/computer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nickname"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/common__text_h2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="@string/example_name"
                    android:textAlignment="center"
                    android:textSize="@dimen/common__text_h2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/common__text_h2"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="@string/email_example_com"
                    android:textAlignment="center"
                    android:textSize="@dimen/common__text_h2" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>