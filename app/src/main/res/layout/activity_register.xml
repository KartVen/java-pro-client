<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context=".ui.auth.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/register_tv_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/register_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/nickname"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/register_tv_headline"
            app:layout_constraintTop_toBottomOf="@id/register_tv_headline" />

        <EditText
            android:id="@+id/register_et_nickname"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="32dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/login_edittext_bg"
            android:ems="10"
            android:hint="@string/nickname"
            android:inputType="textEmailAddress"
            android:labelFor="@id/register_tv_email"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/register_tv_nickname"
            app:layout_constraintTop_toBottomOf="@id/register_tv_nickname" />

        <TextView
            android:id="@+id/register_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/register_et_nickname"
            app:layout_constraintTop_toBottomOf="@id/register_et_nickname" />

        <EditText
            android:id="@+id/register_et_email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="32dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/login_edittext_bg"
            android:ems="10"
            android:hint="@string/email_example_com"
            android:inputType="textEmailAddress"
            android:labelFor="@id/register_tv_email"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/register_tv_email"
            app:layout_constraintTop_toBottomOf="@id/register_tv_email" />

        <TextView
            android:id="@+id/register_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/password"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/register_tv_headline"
            app:layout_constraintTop_toBottomOf="@+id/register_et_email" />

        <EditText
            android:id="@+id/register_et_password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="32dp"
            android:autofillHints="password"
            android:background="@drawable/login_edittext_bg"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:labelFor="@id/register_tv_password"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/register_tv_password"
            app:layout_constraintTop_toBottomOf="@id/register_tv_password" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_btn"
            style="Widget.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:background="@color/white"
            android:foreground="?selectableItemBackground"
            android:text="@string/sign_up"
            android:textColor="@color/dark_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/register_et_password"
            app:layout_constraintStart_toStartOf="@id/register_et_password"
            app:layout_constraintTop_toBottomOf="@id/register_et_password" />

        <TextView
            android:id="@+id/register_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/register_et_password"
            app:layout_constraintStart_toStartOf="@id/register_et_password"
            app:layout_constraintTop_toBottomOf="@id/confirm_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>